<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>
  <servers>
    <!-- update this with the correct AWS server -->
    <server host="ec2-52-33-123-44.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>
   <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
   <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
   </arrivalphase>
  </load>
  <options>
    <option name="global_ack_timeout" value="2000"/>
    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.
0.4</user_agent>
    </option>
  </options>
  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url="/users/sign_up" version="1.1" method="GET"/>
      </request>
      <!-- create a random number to make a unique user name -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_user_number" />
      </setdynvars>
      <!-- register -->
      <request subst="true">
        <http
          url='/users/sign_up'
          version='1.1'
          method='POST'
          contents='user%5Bemail%5D=user_%%_random_user_number%%&amp;
          user%5Bpassword%5D=password_%%_random_user_number%%&amp;
          user%5Bpassword_confirmation%5D=password_%%_random_user_number%%&amp;
          commit=Sign+up'>
        </http>
      </request>
      <!-- get to the homescreen, wait, and create event -->
      <thinktime value="2" random="true"></thinktime>
      <request>
        <http url="/events/new" version="1.1" method="GET"/>
      </request>
      <thinktime value="2" random="true"></thinktime>
      <request subst="true">
        <http
          url='/events/new'
          version='1.1'
          method='POST'
          contents='event%5Bname%5D=event_%%_random_user_number%%&amp;
          event%5Blocation%5D=place_%%_random_user_number%%&amp;
          event%5Bdescription%5D=description_%%_random_user_number%%&amp;
          event%5Bhost%5D=user_%%_random_user_number%%&amp;
          commit=Submit'>
        </http>
      </request>
      <!-- think and attend -->
      <!-- maybe missing token?-->
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/events/'
          version='1.1'
          method='POST'
          contents='commit=Attend'>
        </http>
      </request>
      <!-- go home and log out -->
      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>
      <thinktime value="2" random="true"></thinktime>

    </session>
  </sessions>
</tsung>
