<% search_term = params[:keyword].to_s %>
<% render 'search_form' %>
<h1>Searching for "<%= search_term %>"</h1>

<div class="row">
    <% @events.each do |event| %>
    <% cache ['event_list', event] do %>
      <% if search_term.in? event.name %>
        <div class="col-sm-4 col-md-4 col-lg-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4><%= event.name %> <small>Hosted by <%= event.host %></small></h4>
            </div>
            <div class="panel-body">
              <p>
                <span class="glyphicon glyphicon-map-marker"></span>
                <%= event.location %>
              </p>
              <p>
                <span class="glyphicon glyphicon-time"></span>
                <%= event.timestart.strftime("%B %-d, %l:%M %p") %>
              </p>
              <p><%= link_to 'View', event, class: "btn btn-primary btn-sm" %> <%= link_to 'Edit', edit_event_path(event), class: "btn btn-default btn-sm" %></p>
            </div>
          </div>
        </div>
      <% end %>
      <% end %>
    <% end %>
</div>
